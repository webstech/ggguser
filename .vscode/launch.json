{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Tests",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                // "--nolazy",
            ],
            "args": [
                "${workspaceFolder}/node_modules/jest/bin/jest.js",
                "--runInBand",
            ],
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/build/**/*.js",
                "${workspaceFolder}/tests/*.js"
            ]
        },
        {
            "name": "Jest Debug Current File",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand",
                "--cache",
                "${fileBasename}",
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/build/**/*.js",
                "${workspaceFolder}/lib/**/*.js",
                "${workspaceFolder}/tests/*.js"
            ],
        },
        {
            "name": "Debug current file",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
                "--loader",
                "ts-node/esm",
            ],
            "program": "${relativeFile}",
            "args": [
                "--mail",
                "${workspaceFolder}/../gggmail"
            ],
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/build/**/*.js",
                "${workspaceFolder}/mailServer/**/*.js",
            ]
        },
        {
            "name": "Debug mail server",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "--inspect-brk",
            ],
            "args": [
                "${workspaceFolder}/node_modules/jest/bin/jest.js",
                "--runInBand",
            ],
            "stopOnEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": null,
            "runtimeExecutable": null,
            "env": {
                "NODE_ENV": "development"
            },
            "console": "integratedTerminal",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/build/**/*.js",
                "${workspaceFolder}/tests/*.js"
            ]
        }
    ]
}